@page


<div class="container">
    <div class="row m2">
        <div class="col-5">
            <div class="text-centered">
                <h2>Register Property Owner</h2>
            </div>
            <form method="post">
                <div class="mb-3">
                            <label class="form-label">First Name</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter first name" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Last Name</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter last name" />
                            <span class="text-danger small"></span>
                            </div>
                <div class="mb-3">
                            <label class="form-label">ID/Passport Number</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter ID or Passport Number" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter email address" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Date Of Birth</label>
                            <span class="text-danger">*</span>
                            <input type="date" class="form-control" placeholder="Your date of birth" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Gender</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Gender of applicant" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Street Address</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter your street address" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Suburb</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter your suburb name" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">City</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter city" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Postal Code</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter postal code" />
                            <span class="text-danger small"></span>
                </div>
                <div class="mb-3">
                            <label class="form-label">Province</label>
                            <span class="text-danger">*</span>
                            <input class="form-control" placeholder="Enter province" />
                            <span class="text-danger small"></span>
                </div>
                <a class="btn btn-primary" asp-controller="Owner" asp-action="Register">Submit</a>
            </form>
        </div>

    </div>
</div>